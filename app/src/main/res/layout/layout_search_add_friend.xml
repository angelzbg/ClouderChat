<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addF_CL_Main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/gui_gray_dark">

    <TextView
        android:id="@+id/addF_TV_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Send friend request"
        android:textColor="@color/gui_text_white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addF_ET_Message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/roboto_regular"
        android:hint="Greeting message"
        android:inputType="text|textMultiLine|textCapSentences"
        android:maxLength="50"
        android:singleLine="true"
        android:textColor="@color/gui_text_whitish"
        android:textColorHint="@color/gui_text_hint"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addF_TV_Title" />

    <Button
        android:id="@+id/addF_B_Send"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        android:text="Send"
        android:textColor="@color/blue_hex2"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addF_ET_Message" />

    <Button
        android:id="@+id/addF_B_Cancel"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        android:text="Cancel"
        android:textColor="@color/gui_text_whitish"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addF_B_Send"
        app:layout_constraintTop_toTopOf="@+id/addF_B_Send" />
</android.support.constraint.ConstraintLayout>